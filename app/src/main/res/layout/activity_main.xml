<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:textAllCaps="false"
        android:id="@+id/btnSafetyDetect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Safety Detect Kit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBankCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Bank Card Kit"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btnSafetyDetect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSafetyDetect" />

    <Button
        android:id="@+id/btnLocation"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Location Activity"
        app:layout_constraintEnd_toEndOf="@+id/btnBankCard"
        app:layout_constraintStart_toStartOf="@+id/btnBankCard"
        app:layout_constraintTop_toBottomOf="@+id/btnBankCard" />


</androidx.constraintlayout.widget.ConstraintLayout>